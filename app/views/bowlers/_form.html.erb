<%= form_for @bowler, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :first_name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :team_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.collection_select :team_id, Team.all, :id, :name, {:prompt => true}, {:class => 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            bowlers_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
