<%= bootstrap_form_for bowler, style: :horizontal, left: "col-sm-2", right: "col-sm-4" do |f| %>
  <%= f.alert_message "Please fix the #{pluralize(bowler.errors.count, "error")} below." %>
  <%= f.text_field :first_name, :class => 'form-control' %>
  <%= f.text_field :last_name, :class => 'form-control' %>
  <%= f.text_field :nickname, :class => 'form-control' %>
  <%= f.text_field :email, :class => 'form-control' %>
  <%= f.collection_select :team_id, Team.all, :id, :name, {:prompt => true}, {:class => 'form-control'} %>
  <%= f.form_group do %>
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          bowlers_path, :class => 'btn btn-default' %>
  <% end %>
<% end %>
