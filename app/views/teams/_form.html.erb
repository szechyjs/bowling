<%= form_for @team, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :league_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.collection_select :league_id, League.all, :id, :name, {:prompt => true}, {:class => 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            teams_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
