<%- model_class = Series -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_series_path,
            :class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:bowler_id) %></th>
      <th><%= model_class.human_attribute_name(:team_id) %></th>
      <th><%= model_class.human_attribute_name(:week) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th>Total</th>
      <th>Average</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= series.bowler %></td>
        <td><%= series.team.name %></td>
        <td><%= series.week %></td>
        <td><%= series.date %></td>
        <td><%= series.total %></td>
        <td><%= series.average %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_series_path(series), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      series_path(series),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_series_path,
            :class => 'btn btn-primary' %>
