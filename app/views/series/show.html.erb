<%- model_class = Series -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:bowler_id) %>:</strong></dt>
  <dd><%= @series.bowler_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:league_id) %>:</strong></dt>
  <dd><%= @series.league_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_id) %>:</strong></dt>
  <dd><%= @series.team_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:week) %>:</strong></dt>
  <dd><%= @series.week %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @series.date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              series_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_series_path(@series), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              series_path(@series),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
