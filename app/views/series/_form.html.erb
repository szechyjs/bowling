<%= form_for @series, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :bowler_id, :class => 'form-label' %>
    <div class="controls">
      <%= f.collection_select :bowler_id, Bowler.all, :id, :name, {:prompt => true}, {:class => 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :league_id, :class => 'form-label' %>
    <div class="controls">
      <%= f.collection_select :league_id, League.all, :id, :name, {:prompt => true}, {:class => 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :team_id, :class => 'form-label' %>
    <div class="controls">
      <%= f.collection_select :team_id, Team.all, :id, :name, {:prompt => true}, {:class => 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :week, :class => 'form-label' %>
    <div class="controls">
      <%= f.number_field :week, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => 'form-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'form-control', :data => {:provide => 'datepicker', 'date-format' => 'yyyy-mm-dd'}  %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            series_index_path, :class => 'btn btn-default' %>
 
<% end %>
